# Production Environment Variables
# Copy this file to .env and fill in your actual values

# ========================
# BACKEND CONFIGURATION
# ========================

# MongoDB Atlas Connection (REQUIRED)
# Get this from MongoDB Atlas Dashboard -> Connect -> Drivers
MONGO_URL="mongodb+srv://username:password@cluster.mongodb.net/agency_platform?retryWrites=true&w=majority"
DB_NAME="agency_platform"

# JWT Secret Key (REQUIRED) 
# Generate a strong secret key - use the one provided below or generate your own
JWT_SECRET="your-super-secure-jwt-secret-key-change-this-in-production-make-it-very-long-and-random"

# Environment
ENVIRONMENT="production"

# CORS Origins (REQUIRED)
# Add your frontend domain here (e.g., https://your-app.render.com)
CORS_ORIGINS="https://your-frontend-domain.com,https://your-app.render.com"

# ========================
# FRONTEND CONFIGURATION  
# ========================

# Backend API URL (REQUIRED)
# This should point to your deployed backend
REACT_APP_BACKEND_URL="https://your-backend-api.render.com"

# Environment
REACT_APP_ENVIRONMENT="production"

# ========================
# OPTIONAL INTEGRATIONS
# ========================

# Email Service (Optional - for notifications)
# SENDGRID_API_KEY="your-sendgrid-api-key"
# EMAIL_FROM="noreply@youragency.com"

# File Storage (Optional - for file uploads)
# CLOUDINARY_CLOUD_NAME="your-cloud-name"
# CLOUDINARY_API_KEY="your-api-key"
# CLOUDINARY_API_SECRET="your-api-secret"

# OAuth (Optional - for social login)
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"
# GITHUB_CLIENT_ID="your-github-client-id"
# GITHUB_CLIENT_SECRET="your-github-client-secret"